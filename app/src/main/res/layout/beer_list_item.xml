<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name"
        android:id="@+id/beer_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/beer_image"
        android:textAlignment="center"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/beer_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="#c6c2c2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Brewery"
        android:id="@+id/beer_brewery"
        android:layout_below="@+id/beer_name"
        android:layout_toEndOf="@+id/beer_image"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Style"
        android:id="@+id/beer_style"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/beer_image"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/beer_image"
        android:layout_below="@+id/beer_brewery" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Creation date"
        android:id="@+id/beer_date"
        android:textAlignment="textEnd"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/beer_name"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
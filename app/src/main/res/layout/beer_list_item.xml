<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#d7ccc8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:id="@+id/beer_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/beer_image"
        android:textAlignment="center"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/beer_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="#c6c2c2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Brewery"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:id="@+id/beer_brewery"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/beer_date"
        android:layout_alignStart="@+id/beer_date"
        android:layout_alignEnd="@+id/beer_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Style"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:id="@+id/beer_style"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="textStart"
        android:layout_alignBottom="@+id/beer_image"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/beer_image"
        android:layout_below="@+id/beer_brewery" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Creation date"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:id="@+id/beer_date"
        android:textAlignment="textStart"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/beer_name"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/beer_image" />

</RelativeLayout>